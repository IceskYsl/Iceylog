
<% content_for :sitemap do %>
  <span class="current"><%= t("cpanel.overview") %></span>
<% end %>

<% if !@recent_posts.blank? %>
<div class="group">
  <h2><%= t("cpanel.recent_topics") %></h2>
  <ul>
    <% @recent_posts.each do |item| %>
    <li><a href="<%= edit_cpanel_post_path(item) %>"><%= truncate(item.title,:length => 50) %></a></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="group">
  <h2><%= t("cpanel.statics") %></h2>
  <ul>
		<li><%= t("cpanel.menu.category") %>: <%= Category.count %> 个</li>
     <li><%= t("cpanel.menu.posts") %>: <%= Post.count %> 个</li>
     <li><%= t("cpanel.menu.pages") %>: <%= Page.count %> 条</li>
		<li><%= t("cpanel.menu.sites") %>: <%= Site.count %> 条</li>
  </ul>
</div>

